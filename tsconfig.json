{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "tests/**/*.test.ts",
    "tests/VehicleUsecases.test.ts"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "buildOnSave": true
}
